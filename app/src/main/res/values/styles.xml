<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBarApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/statusBarApp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>



    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_login</item>
    </style>

    <style name="Prudential.HeaderTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/prudentialmodern_boldsemcon_webfont</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeHeaderTitle</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Prudential.HeaderTitleStyleOpenSans" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Prudential.HeaderSubTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Prudential.TitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>

    <style name="Prudential.CheckStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:button">@drawable/selector_check</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="Prudential.SubTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
    </style>

    <style name="Prudential.SubSubTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/colorGrayLight</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Prudential.InputTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textColorHint">@color/colorGrayLight</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="Prudential.InputTexTokenStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:maxLength">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">51dp</item>
    </style>

    <style name="Prudential.OutlinedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/bg_button_border</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Prudential.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">126dp</item>
        <item name="android:background">@drawable/bg_button_borderless_enable</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Prudential.ButtonStyleBiometric" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">0dp</item>

        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

</resources>