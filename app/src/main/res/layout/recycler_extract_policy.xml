<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    app:cardCornerRadius="0dp"
    android:layout_marginLeft="16dp"
    android:id="@+id/recycler_extract_policy_card"
    android:layout_height="wrap_content"
    app:strokeColor="@color/colorGrayLight"
    android:layout_marginRight="8dp"
    android:padding="1dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recycler_extract_policy_background"
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:visibility="gone"
            android:id="@+id/recycler_extract_policy_checkbox"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:button="@color/colorPrimary"
            android:drawableStart="@drawable/bg_checkbox"
            android:fontFamily="@font/opensans_regular"
            android:padding="0dp"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_extract_policy_line" />

        <TextView
            android:id="@+id/recycler_extract_policy_insured_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Segurado:"
            android:textColor="@color/colorGreyCard"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/recycler_extract_policy_description"
            app:layout_constraintStart_toStartOf="@+id/recycler_extract_policy_description"
            app:layout_constraintTop_toBottomOf="@+id/recycler_extract_policy_description" />

        <View
            android:id="@+id/recycler_extract_policy_line"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycler_extract_policy_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/opensans_regular"
            android:text="00928392"
            android:textColor="@color/colorGreyCard"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_extract_policy_line" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_italic"
            android:text="Vida inteira Mais"
            android:textColor="@color/colorGreyCard"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/recycler_extract_policy_description"
            app:layout_constraintEnd_toEndOf="@+id/recycler_extract_policy_description"
            app:layout_constraintStart_toStartOf="@+id/recycler_extract_policy_description" />

        <TextView
            android:id="@+id/tagEmAtraso"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_tag_atension"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:padding="4dp"
            android:text="EM ATRASO"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/recycler_extract_policy_checkbox"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycler_extract_policy_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Vida Inteira Mais"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/recycler_extract_policy_id"
            app:layout_constraintStart_toStartOf="@+id/recycler_extract_policy_id"
            app:layout_constraintTop_toBottomOf="@+id/recycler_extract_policy_id" />


        <TextView
            android:id="@+id/recycler_extract_policy_insured_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Sandra Regina Pereira"
            android:textColor="@color/colorBlackText"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recycler_extract_policy_insured_title"
            app:layout_constraintStart_toStartOf="@+id/recycler_extract_policy_insured_title"
            app:layout_constraintTop_toBottomOf="@+id/recycler_extract_policy_insured_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>